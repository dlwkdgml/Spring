				<td width=300><input type="text" name="uid"></td>
			</tr>
			<tr>
				<td>비밀번호</td>
				<td><input type="password" name="upw"></td>
			</tr>
			<tr>
				<td colspan=2>
					<input type="submit" value="로그인">
					 <button onClick="javascript:goDetail('테스트');">팝업</button>
    				 <div style="height:1000px;"> </div>


				</td>
			</tr>
		</table>
	</form>
</body>
<script>
$(frm).submit(function(e){
	e.preventDefault();
	var upw=$(frm.upw).val();
	var uid=$(frm.uid).val();
	var chkLogin=$(frm.chkLogin).is(":checked")? true:false;
	$.ajax({
		type:"post",
		url:"login",
		data:{"uid":uid , "upw":upw , "chkLogin" :chkLogin},
		success:function(data){
				if(data==0){
					alert("꺼져라 이방인")
				}
				else if(data==2){
					alert("암호가 틀리다 형제여");
				}else{
					alert("환영한다 형제여");
					location.href="list";
				}
		}
	});
});
</script>
