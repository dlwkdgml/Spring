<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper_oracle.GroupMapper">

	<select id="list" resultType="com.example.domain.GroupVO">
		select * from tbl_group where g_code='1'
	</select>
	
	<insert id="insert">
		insert into tbl_group(g_code, g_name,g_pass,g_pic) values(seq_group.nextval, #{g_name},#{g_pass},#{g_pic})
	</insert>
	
	<select id ="mygroup" resultType = "com.example.domain.GuVO">
		select tbl_group.g_code gcode, g_name from tbl_group INNER JOIN tbl_gu on tbl_group.g_code = tbl_gu.g_code
		where id = #{id}
	</select>
	
	<select id = "guget" resultType = "com.example.domain.UserVO">
		select tbl_gu.id, tbl_user.name from tbl_gu inner join tbl_user on tbl_gu.id = tbl_user.id 
		where g_code = '21'
	</select>
	
</mapper>